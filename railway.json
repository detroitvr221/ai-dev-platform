{
  "build": {
    "builder": "DOCKERFILE"
  },
  "deploy": {
    "numReplicas": 1,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3,
    "healthcheckPath": "/api/health",
    "port": 8080
  },
  "envs": {
    "OPENAI_API_KEY": { "required": true },
    "PORT": { "value": "8080" },
    "PROJECTS_DIR": { "value": "/data/projects" }
  },
  "volumes": [
    { "name": "data", "mountPath": "/data" }
  ]
}

